package components

templ Main() {
	@Root() {
		<div class="flex flex-col gap-4">
			@card() {
				<a href="/hardware" class="text-blue-600 visited:text-purple-600">Page matériel</a>
				<form method="POST" action="/indi/action">
					@button("submit", "Connecter monture", nil)
				</form>
			}
			@card() {
				<form method="POST" action="/setup">
					@button("submit", "Arrêter serveur INDI", nil)
				</form>
			}
		</div>
	}
}
